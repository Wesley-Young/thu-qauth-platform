{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "nodenext",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    "outDir": "out"
  },
  "include": ["src/**/*"]
}
